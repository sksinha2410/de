# Environment Variables
# Copy this file to .env and fill in your values

# Gemini API Key (required)
GEMINI_API_KEY=your_gemini_api_key_here

# Gemini Model (optional, default: gemini-1.5-flash)
GEMINI_MODEL=gemini-1.5-flash

# PDF Processing DPI (optional, default: 100)
# Higher values increase quality but use more memory
PDF_DPI=100

# Allowed domains for document URLs (comma-separated, optional)
# If empty, all public URLs are allowed (private IPs are always blocked)
# Example: hackrx.blob.core.windows.net,example.com
ALLOWED_DOMAINS=

# Server Configuration
PORT=5000
DEBUG=False
